<%= tag.div class: "ballet__markdown" do %>
  <%= tag.div class: "ballet__markdown__nav" do%>
    <%= render(Ballet::TablistComponent.new) do |tablist| %>
      <% tablist.with_tab(selected: true) { "Write" }%>
      <% tablist.with_tab(selected: false) { "Preview" }%>
    <% end %>
    <%= tag.div class: "ballet__markdown__menu" do %>
      <%= tag.button "H", class: "ballet__markdown__item" %>
      <%= tag.button "B", class: "ballet__markdown__item ballet__markdown__menu__item--bold" %>
      <%= tag.button "I", class: "ballet__markdown__item ballet__markdown__menu__item--italic" %>
    <% end %>
  <% end %>
  <%= tag.div class: "ballet__markdown__content" do %>
    <%- if @form -%>
      <%= @form.text_area(@name, class: "ballet__markdown__textarea") %>
    <%- else -%>
      <%= text_area_tag(@name, content, class: "ballet__markdown__textarea") %>
    <%- end -%>
  <% end %>
<% end %>
