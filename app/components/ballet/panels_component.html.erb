<%= tag.div(class: "ballet__panels") do %>
  <%= render(Ballet::TablistComponent.new) do %>
  <% end %>
  <%= tag.nav(class: "ballet__panels__nav") do %>
    <%= tag.div(class: "ballet__panels__tabs") do %>
      <%= tag.button("Write", class: "ballet__panels__tab ballet__panels__tab--active", role: "tab") %>
      <%= tag.button("Preview", class: "ballet__panels__tab ballet__panels__tab--inactive", role: "tab") %>
    <% end %>
  <% end %>
  <%= tag.div(content, class: "ballet__panels__content") %>
<% end %>
